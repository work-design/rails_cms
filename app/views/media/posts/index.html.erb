<div class="ui top attached borderless menu">
  <div class="header item">Posts</div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Post.human_attribute_name(:id) %></th>
      <th><%= Post.human_attribute_name(:title) %></th>
      <th><%= Post.human_attribute_name(:code) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.code %></td>
      <td class="ui labels">
        <%= link_to 'Show', post_path(post), class: 'ui blue label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @posts %>
