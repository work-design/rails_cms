<div class="ui top attached borderless menu">
  <div class="header item">Admin Topics</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Admin Topic', new_admin_topic_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Topic.human_attribute_name(:id) %></th>
      <th><%= Topic.human_attribute_name(:title) %></th>
      <th><%= Topic.human_attribute_name(:author) %></th>
      <th><%= Topic.human_attribute_name(:tag_strings) %></th>
      <th><%= Topic.human_attribute_name(:body) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= topic.id %></td>
      <td><%= topic.title %></td>
      <td><%= topic.author&.name %></td>
      <td><%= topic.tag_strings %></td>
      <td><%= topic.body %></td>
      <td class="ui labels">
        <%= link_to admin_topic_path(topic), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_topic_path(topic), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_topic_path(topic), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @topics %>
