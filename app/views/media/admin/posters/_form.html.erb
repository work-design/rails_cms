<%= form_with model: [:admin, @poster], local: true do |f| %>
  <%= render 'shared/error_messages', target: @poster %>
  <%= f.text_field :title %>
  <%= f.text_field :link %>
  <%= f.text_field :linking_type %>
  <%= f.text_field :linking_id %>
  <%= f.check_box :published %>
  <%= f.file_field :image %>
  <%= f.select :platform, options_for_select(Poster.options_i18n(:platform), @poster.platform) %>
  <%= f.submit %>
<% end %>
