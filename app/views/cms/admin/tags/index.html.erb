<div class="ui top attached borderless menu">
  <div class="header item">Admin Tags</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Admin Tag', new_admin_tag_path, class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Tag.human_attribute_name(:id) %></th>
      <th><%= Tag.human_attribute_name(:name) %></th>
      <th><%= Tag.human_attribute_name(:type) %></th>
      <th><%= Tag.human_attribute_name(:taggeds_count) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.id %></td>
      <td><%= tag.name %></td>
      <td><%= tag.type %></td>
      <td><%= tag.taggeds_count %></td>
      <td class="ui labels">
        <%= link_to admin_tag_path(tag), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_tag_path(tag), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button' do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_tag_path(tag), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @tags %>
