

<figure data-controller="player">
  <%= audio_tag @audio.media.url, data: { player_target: 'media' } %>

  <div class="has-v-centered">
    <button data-action="player#toggle" class="button is-small">
      <i class="fa-solid fa-play"></i>
    </button>
    <progress data-player-target="progress" value="0" class="progress is-primary ml-2"></progress>
  </div>
</figure>
