<td><%= model.title %></td>
<td><%= image_tag model.cover, class: 'image' if model.cover.attached? %></td>
<td><%= audio_tag model.media.url(disposition: params[:disposition]), controls: true %></td>
<td>
  <label class="tag"><%= model.state_i18n %></label>
  <div class="buttons">
    <%= link_to t('.approve'), new_check_path('Video', model.id, state: Video.states[:verified]), remote: true, class: 'button is-success' %>
    <div class="or"></div>
    <%= link_to t('.reject'), new_check_path('Video', model.id, state: Video.states[:rejected]), remote: true, class: 'button is-danger' %>
  </div>
</td>
<td>
  <%= link_to model.author.name, admin_user_path(model.author_id) if model.author %>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
