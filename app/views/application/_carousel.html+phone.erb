<figure class="image" data-action="touchmove->slide#move:passive touchend->slide#end:passive" data-index="<%= index %>" style="z-index: <%= index == 0 ? 0 : -1 %>">
  <% if model.image.content_type.to_s.start_with?('video') %>
    <%= video_tag model.image.url, controls: true %>
  <% else %>
    <%= image_tag model.image, style: 'object-fit: contain' %>
  <% end %>
</figure>
